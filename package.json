{
  "name": "node-ecommerce-api",
  "description": "Node E-commerce API",
  "version": "0.0.1",
  "main": "index.js",
  "repository": "git@github.com:alancleyton/node-ecommerce-api.git",
  "author": "Alan Cleyton <alancleyton67@gmail.com>",
  "license": "MIT",
  "scripts": {
    "test": "jest --watch",
    "test:staged": "jest --passWithNoTests",
    "dev": "ts-node-dev --respawn --transpile-only --ignore-watch node_modules src/server.ts",
    "start": "node dist/server.js",
    "build": "yarn run type:check && yarn run build:js",
    "build:js": "babel src --copy-files --no-copy-ignored --out-dir dist --extensions \".ts\"",
    "build:types": "tsc --emitDeclarationOnly",
    "type:check": "tsc --noEmit",
    "lint": "eslint src/**",
    "lint:fix": "eslint 'src/**' --fix",
    "lint:prettier": "prettier src/** --write",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@babel/cli": "^7.17.6",
    "@babel/core": "^7.17.8",
    "@babel/node": "^7.16.8",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-typescript": "^7.16.7",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.23",
    "@typescript-eslint/eslint-plugin": "^5.18.0",
    "@typescript-eslint/parser": "^5.18.0",
    "eslint": "^8.12.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-import-helpers": "^1.2.1",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "lint-staged": "^12.3.7",
    "prettier": "^2.6.2",
    "ts-jest": "^27.1.4",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.6.3"
  },
  "dependencies": {
    "express": "^4.17.3"
  }
}
